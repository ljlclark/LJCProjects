<!-- ControlHelper.xml -->
<items>
  <CreateLabel>
    <summary>
      Create a new Label control.
    </summary>
    <param name="name">The control name.</param>
    <param name="text">The text value.</param>
    <param name="location">The Location value.</param>
    <param name="width">The control width.</param>
    <returns>The Label control reference.</returns>
  </CreateLabel>
  <CreateTextBox>
    <summary>
      Create a new TextBox control.
    </summary>
    <param name="name">The control name.</param>
    <param name="text">The text value.</param>
    <param name="location">The Location value.</param>
    <param name="width">The control width.</param>
    <returns>The TextBox control reference.</returns>
  </CreateTextBox>
  <CreateComboBox>
    <summary>
      Create a new ComboBox control.
    </summary>
    <param name="name">The control name.</param>
    <param name="location">The Location value.</param>
    <param name="width">The control width.</param>
    <returns>The ComboBox control reference.</returns>
  </CreateComboBox>
  <CreateCheckBox>
    <summary>
      Creates a new CheckBox control.
    </summary>
    <param name="name">The conrol name.</param>
    <param name="text">The text value.</param>
    <param name="location">The Location value.</param>
    <param name="width">The control width.</param>
    <returns>The CheckBox reference.</returns>
  </CreateCheckBox>
  <CreateButton>
    <summary>
      Create a new Button control.
    </summary>
    <param name="name">The control name.</param>
    <param name="text">The control text.</param>
    <param name="location">The control location.</param>
    <returns>The created control.</returns>
  </CreateButton>
</items>