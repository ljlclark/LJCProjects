<!-- DataDetailData.xml -->
<item>
  <DataDetailData>
    <summary>Contains methods for using DataDetail data.</summary>
    <remarks>
      <para>
        DataDetailData is a data helper class that uses manager classes to
        access the configuration values for a DataDetailDialog form.
      </para>
      <para>
        The configuration tables are: ControlDetail, ControlTab, ControlColumn
        and ControlRow.
      </para>
    </remarks>
  </DataDetailData>
  <DataDetailDataC>
    <summary>
      Initializes an object instance.
    </summary>
    <param name="dataConfigName"></param>
  </DataDetailDataC>
  
  <!-- ControlDetail -->
  <DataColumns>
    <summary>
      Loads or creates Data Columns.
    </summary>
    <returns>The Data Columns object.</returns>
  </DataColumns>
  <GetControlDetail>
    <summary>
      Gets the ControlDetail data object.
    </summary>
    <returns>The ControlDetail reference.</returns>
  </GetControlDetail>
  <UpdateControlDetail>
    <summary>
      Updates the ControlDetail data object.
    </summary>
    <param name="dataObject">The DataObject.</param>
    <param name="keyColumns">The key columns.</param>
  </UpdateControlDetail>
  
  <!-- ControlTab -->
  <AddControlTab>
    <summary>
      Adds the ControlTab data object.
    </summary>
    <param name="dataObject">The DataObject.</param>
    <param name="propertyNames">The incuded property names.</param>
  </AddControlTab>
  <SetControlTab>
    <summary>
      Gets the ControlTab data object.
    </summary>
    <param name="dataObject">The DataObject.</param>
    <returns>The ControlTab data object.</returns>
    <remarks>
      Creates the data if it does not already exist.
    </remarks>
  </SetControlTab>
  <UpdateControlTab>
    <summary>
      Updates the ControlTab data object.
    </summary>
    <param name="dataObject">The DataObject.</param>
    <param name="keyColumns">The key columns.</param>
  </UpdateControlTab>

  <!-- ControlColumn -->
  <AddControlColumn>
    <summary>
      Adds the ControlColumn data object.
    </summary>
    <param name="dataObject">The DataObject.</param>
    <param name="propertyNames">The incuded property names.</param>
  </AddControlColumn>
  <UpdateControlColumn>
    <summary>
      Updates the ControlColumn data object.
    </summary>
    <param name="dataObject">The DataObject.</param>
    <param name="keyColumns">The key columns.</param>
  </UpdateControlColumn>

  <!-- ControlRow -->
  <AddControlRow>
    <summary>
      Adds the ControlRow data object.
    </summary>
    <param name="dataObject">The DataObject.</param>
    <param name="propertyNames">The incuded property names.</param>
  </AddControlRow>
  <UpdateControlRow>
    <summary>
      Updates the ControlRow data object.
    </summary>
    <param name="dataObject">The DataObject.</param>
    <param name="keyColumns">The key columns.</param>
  </UpdateControlRow>
</item>