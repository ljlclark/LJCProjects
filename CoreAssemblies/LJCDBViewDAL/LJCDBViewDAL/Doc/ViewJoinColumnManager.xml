<!-- ViewJoinColumnManager.xml -->
<items>
  <ViewJoinColumnManager>
    <summary>
      Provides ViewJoinColumn specific data manipulation methods.
    </summary>
  </ViewJoinColumnManager>
  <ViewJoinColumnManagerC>
    <summary>
      Initializes an object instance.
    </summary>
    <param name="dbServiceRef">The database service reference object.</param>
    <param name="dataConfigName">The data configuration name.</param>
    <param name="tableName">The table name.</param>
  </ViewJoinColumnManagerC>
  <RetrieveWithUniqueKey>
    <summary>
      Retrieves the record with the unique key.
    </summary>
    <param name="viewJoin">The ViewJoin object.</param>
    <param name="dbColumn">The DbColumn object.</param>
    <returns>The data object record.</returns>
  </RetrieveWithUniqueKey>
  <LoadWithParentID>
    <summary>
      Retrieves a collection of Data records for the specified parent ID.
    </summary>
    <param name="viewJoinID">The parent ID.</param>
    <returns>The data object record collection.</returns>
  </LoadWithParentID>
  <LoadDbColumnsWithParentID>
    <summary>
      Retrieves a DbColumns collection for the specified parent ID.
    </summary>
    <param name="viewJoinID">The parent ID.</param>
    <returns>The DbColumns collection.</returns>
  </LoadDbColumnsWithParentID>
  <GetViewJoinColumnFilters>
    <summary>
      Creates and returns the ViewJoinColumn Filters.
    </summary>
    <param name="viewJoinId">The ViewJoin ID.</param>
    <returns>The Filters object.</returns>
  </GetViewJoinColumnFilters>
  <SaveData>
    <summary>
      Updates the record if it exists, otherwise creates it.
    </summary>
    <param name="viewJoinColumn">The data record.</param>
    <returns>True if successful otherwise, false.</returns>
  </SaveData>
  <AddData>
    <summary>
      Adds a data record.
    </summary>
    <param name="viewJoinColumn">The data record.</param>
    <returns>The added data object record with the assigned ID value.</returns>
  </AddData>
</items>