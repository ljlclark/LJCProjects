<!-- ViewColumnManager.xml -->
<items>
  <ViewColumnManagerC>
    <summary>
      Initializes an object instance.
    </summary>
    <param name="dbServiceRef">The database service reference object.</param>
    <param name="dataConfigName">The data configuration name.</param>
    <param name="tableName">The table name.</param>
  </ViewColumnManagerC>
  <AddWithFlags>
    <summary>
      Adds a record including the flag values.
    </summary>
    <param name="dataObject">The Data Object.</param>
    <param name="propertyNames">The included column property names.</param>
    <returns>The object with the DB assigned key values.</returns>
  </AddWithFlags>
  <LoadDbColumnsWithParentID>
    <summary>
      Retrieves a DbColumns collection for the specified parent ID.
    </summary>
    <param name="viewDataID">The parent ID.</param>
    <param name="tableName">The Table name.</param>
    <returns>The DbColumns collection.</returns>
  </LoadDbColumnsWithParentID>
  <LoadWithParentID>
    <summary>
      Retrieves a collection of Data records for the specified parent ID.
    </summary>
    <param name="viewDataID">The parent ID.</param>
    <returns>The data object record collection.</returns>
  </LoadWithParentID>
  <ResultWithParentID>
    <summary>
      Retrieves the DbResult set of data rows.
    </summary>
    <param name="viewDataID">The parent ID.</param>
    <returns>The DbResult rows.</returns>
  </ResultWithParentID>
  <RetrieveWithID>
    <summary>
      Retrieve the record with ID.
    </summary>
    <param name="id">The ID value.</param>
    <returns>The data object record.</returns>
  </RetrieveWithID>
  <RetrieveWithUniqueKey>
    <summary>
      Retrieves the record with the unique key.
    </summary>
    <param name="viewDataID">The ViewData ID value.</param>
    <param name="columnName">The ColumnName value.</param>
    <returns>The data object record.</returns>
  </RetrieveWithUniqueKey>
  <AddData>
    <summary>
      Adds a data record.
    </summary>
    <param name="viewColumn">The data record.</param>
    <returns>The added data object record with the assigned ID value.</returns>
  </AddData>
  <SaveData>
    <summary>
      Updates the record if it exists, otherwise creates it.
    </summary>
    <param name="viewColumn">The data record.</param>
    <returns>True if successful otherwise, false.</returns>
  </SaveData>
</items>