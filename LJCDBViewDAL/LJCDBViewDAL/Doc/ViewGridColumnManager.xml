<items>
  <ViewGridColumnManager>
    <summary>
      Provides ViewGridColumn specific data manipulation methods.
    </summary>
  </ViewGridColumnManager>
  <ViewGridColumnManagerC>
    <summary>
      Initializes an object instance.
    </summary>
    <param name="dbServiceRef">The database service reference object.</param>
    <param name="dataConfigName">The data configuration name.</param>
    <param name="tableName">The table name.</param>
  </ViewGridColumnManagerC>
  <RetrieveWithIDs>
    <summary>
      Retrieves a data record with the supplied value.
    </summary>
    <param name="viewDataID">The ViewData ID.</param>
    <param name="viewColumnID">The ViewColumn ID.</param>
    <returns>The data record.</returns>
  </RetrieveWithIDs>
  <RetrieveWithUniqueKey>
    <summary>
      Retrieves a data record with the unique key values.
    </summary>
    <param name="viewDataID">The ViewData ID.</param>
    <param name="columnName">The column name.</param>
    <returns>The data record.</returns>
  </RetrieveWithUniqueKey>
  <LoadWithViewIDBySequence>
    <summary>
      Loads a collection of data records ordered by Sequence.
    </summary>
    <param name="viewDataID">The view ID value.</param>
    <returns>The collection of data records.</returns>
  </LoadWithViewIDBySequence>
  <GetIDsKey>
    <summary>
      Get the ID key record.
    </summary>
    <param name="viewDataID">The ViewData ID.</param>
    <param name="viewColumnID">The ViewColumn ID.</param>
    <returns>The IDs key record.</returns>
  </GetIDsKey>
  <GetViewDataIDKey>
    <summary>
      Get the ViewDataID key record.
    </summary>
    <param name="viewDataID">The ViewData ID.</param>
    <returns>The ViewDataID key record.</returns>
  </GetViewDataIDKey>
  <GetUniqueKey>
    <summary>
      Get the Unique key record.
    </summary>
    <param name="viewDataID">The ViewData ID.</param>
    <param name="propertyName">The property name.</param>
    <returns>The unique key record.</returns>
  </GetUniqueKey>
  <SetExcludeKeys>
    <summary>
      Set the temporary exclude keys.
    </summary>
    <remarks>
      These exclude keys are only valid for the next manager data method call.
    </remarks>
  </SetExcludeKeys>
  <GetLoadJoins>
    <summary>
      Creates and returns the Joins object.
    </summary>
    <returns>The DbJoins object.</returns>
  </GetLoadJoins>
  <GetTextFilters>
    <summary>
      Creates and returns the filters object.
    </summary>
    <returns>The DbFilters object.</returns>
  </GetTextFilters>
  <SetOrderBySequence>
    <summary>Sets the current OrderBy names.</summary>
    <remarks>
      These sort columns are only valid for the next manager data method call.
    </remarks>
  </SetOrderBySequence>
  <SaveData>
    <summary>
      Updates the record if it exists, otherwise creates it.
    </summary>
    <param name="viewGridColumn">The data record.</param>
    <returns>True if successful otherwise, false.</returns>
  </SaveData>
  <GetDisplayColumns>
    <summary>
      Retrieves the Display Columns definition.
    </summary>
    <param name="viewDataID">The view ID value.</param>
    <returns>The display columns.</returns>
  </GetDisplayColumns>
</items>