<items>
  <ControlColumns>
    <summary>
      Represents a collection of ControlColumn objects.
    </summary>
    <remarks>
      The ControlColumns object is the main layout definition object.
      The ControlColumn items contain the ControlRows object which is the other
      main layout definition object.
    </remarks>
  </ControlColumns>
  <!-- Collection Methods -->
  <Add>
    <summary>
      Adds the specified object.
    </summary>
    <param name="item">The item object.</param>
  </Add>
  <GetEnumerator>
    <summary>
      Gets the Collection Enumerator.
    </summary>
    <returns>The Collection Enumerator.</returns>
  </GetEnumerator>
  <!-- Custom Methods -->
  <ControlRowColumn>
    <summary>
      Gets the ControlRow parent column.
    </summary>
    <param name="controlRow">The ControlRow object.</param>
    <returns>The ControlColumn object.</returns>
  </ControlRowColumn>
  <!-- Collectio Properties -->
  <Indexer>
    <summary>
      Gets the item by index value.
    </summary>
    <param name="index">The index value.</param>
    <returns>The element item object.</returns>
  </Indexer>
</items>